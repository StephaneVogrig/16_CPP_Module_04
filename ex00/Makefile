NAME	?=	animal

# sources ---------------------------------------------------------------------#

SRC 	?=	main.cpp \
			Animal.cpp \
			Dog.cpp \
			Cat.cpp \
			WrongAnimal.cpp \
			WrongCat.cpp \
			utils.cpp

# objects ---------------------------------------------------------------------#

OBJ_DIR	:=	.build/
OBJ		:=	$(SRC:%.cpp=$(OBJ_DIR)%.o)

DEPS	:=	$(OBJ:.o=.d)

# compilation -----------------------------------------------------------------#

CC		:=	c++
CFLAGS	:=	-Wall -Wextra -Werror -std=c++98

#------------------------------------------------------------------------------#
# rules                                                                        #
#------------------------------------------------------------------------------#

all: $(NAME)

clean:
	@rm -rf $(OBJ_DIR)

fclean: clean
	@rm -rf $(NAME)

re: fclean all

test:
	rm $(NAME)
	@$(MAKE) all --no-print-directory
	./$(NAME)
	

#------------------------------------------------------------------------------#
# compilation                                                                  #
#------------------------------------------------------------------------------#

$(OBJ_DIR)%.o: %.cpp
	@mkdir -p $(dir $@)
	@$(CC) $(CFLAGS) -MMD -c $< -o $@
	@echo "compiled $<"

-include $(DEPS)

#------------------------------------------------------------------------------#
# linkage                                                                      #
#------------------------------------------------------------------------------#

$(NAME): $(OBJ)
	@$(CC) $(OBJ) -o $(NAME)
	@echo "created $(NAME)"

#------------------------------------------------------------------------------#
# specifications                                                               #
#------------------------------------------------------------------------------#

.PHONY: all \
		clean \
		fclean \
		re
